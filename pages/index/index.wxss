.list-msg {
  padding: 0 20rpx;
  background-color: #fff;    
  position: relative;
  margin-top:10px;
  height:100%;
  width:100%;
}
.list-msg .content1{
  border:1px #ccc solid;
  margin-top:10px;
  font-size:10pt;
  padding:10px;
  /**自己加的**/
  margin-bottom:10px;
}
.list-msg .content2{
  height:200px;
  border:1px #ccc solid;
  margin-top:10px;
  font-size:10pt;
  padding:10px;
  /**自己加的**/
  margin-bottom:10px;
  text-align: left;
  overflow: scroll;
  text-overflow: clip;
  white-space: nowrap;
  width: 90%;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-break: 1;
  display: -webkit-inline-box;
